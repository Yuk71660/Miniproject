<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.miniproject.mapper.hboardmapper">
	<select id="getEntireHBoard"
		resultType="com.miniproject.model.HBoard">
		SELECT * FROM hboard order by boardNo desc
	</select>
	
	<insert id="saveHBoard" useGeneratedKeys="true" keyProperty="boardNo">
		INSERT INTO `webmoonya`.`hboard` (`title`, `content`, `writer`) VALUES (#{title}, #{content}, #{writer})
	</insert>
</mapper>